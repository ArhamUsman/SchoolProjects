# Bubble Sort Procedure
# Bubble Sort Procedure
def Bubble_Sort_Efficient(Array):
    swaps = None
    first = 0
    last = len(Array) - 1
    while swaps != False or last == 1 :
        swaps = False
        for count in range(first, last ):
            if Array[count] > Array[count + 1]:
                temp = Array[count]
                Array[count] =  Array[count + 1]
                Array[count + 1] = temp
                swaps = True
        last -= 1


# Check whether to sort integer or string
def Array_Input(Array):
    print("OPTION 1 : Sort Array for String")
    print("OPTION 2 : Sort Array for Integer")
    print("")
    choice = input("Enter Option Number: ")
    while choice != "1" and choice != "2":
        choice = input("Enter a valid option number: ")
    print("")
    print("DATA ENTRY")
    print("Enter 'done' when complete")
    print("")
    if choice == "1":
        x = input("Enter a string: ")
        while x != "done":
            Array.append(x)
            x = input("Enter a string: ")
    else:
        x = input("Enter a integer: ")
        while x != "done":
            try:
                x = int(x)
                Array.append(x)
            except:
                print("ERROR")
            x = input("Enter a integer: ")

# Produce Output
def Array_Output(Array):
    for i in range(len(Array)):
        if i == len(Array) - 1 :
            print("," , Array[i], ")")
        elif i == 0:
            print("(", Array[i], end="")
        else:
            print(",", Array[i], end="")


# Menu
Array1 = []
Array_Input(Array1)
print("")
print("Array before sorting: ")
Array_Output(Array1)
Bubble_Sort_Efficient(Array1)
print("Array after sorting: ")
Array_Output(Array1)
