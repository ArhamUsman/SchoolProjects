# Insertion Sort Procedure
def Insertion_Sort_ZAK(Array):
    s_pointer = 0
    e_pointer = 1
    r_pointer = 0
    for e_pointer in range(1, len(Array)):
        for s_pointer in range(0, e_pointer):
            if Array[e_pointer] < Array[s_pointer]:
                temp = Array[e_pointer]
                for r_pointer in range(e_pointer, s_pointer, -1):
                    Array[r_pointer] = Array[r_pointer -1]
                Array[s_pointer] = temp
            

# Check whether to sort integer or string
def Array_Input(Array):
    print("OPTION 1 : Sort Array for String")
    print("OPTION 2 : Sort Array for Integer")
    print("")
    choice = input("Enter Option Number: ")
    while choice != "1" and choice != "2":
        choice = input("Enter a valid option number: ")
    print("")
    print("DATA ENTRY")
    print("Enter 'done' when complete")
    print("")
    if choice == "1":
        x = input("Enter a string: ")
        while x != "done":
            Array.append(x)
            x = input("Enter a string: ")
    else:
        x = input("Enter a integer: ")
        while x != "done":
            try:
                x = int(x)
                Array.append(x)
            except:
                print("ERROR")
            x = input("Enter a integer: ")

# Produce Output
def Array_Output(Array):
    for i in range(len(Array)):
        if i == len(Array) - 1 :
            print("," , Array[i], ")")
        elif i == 0:
            print("(", Array[i], end="")
        else:
            print(",", Array[i], end="")


# Menu
Array1 = []
Array_Input(Array1)
print("")
print("Array before sorting: ")
Array_Output(Array1)
Insertion_Sort_ZAK(Array1)
print("Array after sorting: ")
Array_Output(Array1)
